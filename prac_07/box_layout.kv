BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: "horizontal"
        Button:
            size_hint_x: 0.2
            text: 'Clear'
            on_press: app.clear_button()
        TextInput:
            id: input_name
            text: ''
    BoxLayout:
        orientation: "horizontal"
        Button:
            size_hint_x: 0.2
            text: 'Greet'
            on_press: app.handle_greet()
        Label:
            text: 'Enter your name:'
            color: (1,1,0,1)
            id: output_label