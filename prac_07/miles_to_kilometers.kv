BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '1'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: "vertical"
            Button:
                on_press: app.adjust_miles(1)
                on_press: app.convert_miles_kilometers(input_number.text)
                text: "UP"
            Button:
                on_press: app.adjust_miles(-1)
                on_press: app.convert_miles_kilometers(input_number.text)
                text: "DOWN"
    # Button:
    #   on_press: app.convert_miles_kilometers(input_number.text)
    #   text: "Convert Miles to Kilometers"
    Label:
        id: output_label
        font_size: 48
        color: (0.75,0.75,0,1)